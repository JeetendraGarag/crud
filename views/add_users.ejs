<%- include('layout/header') %>
    <div class="comntainer">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-secondary">
                        <h3 class="text-light ">Add New Users</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="nb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter the name" required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="email">email</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter the email" required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="password">password</label>
                                <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter the password" required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="phone">phone</label>
                                <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter the phone number" required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="image" class="form-label">select image</label>
                                <input type="file" name="image" class="form-control form-control-lg" required/>
                            </div>
                            <br>
                            <div class="nb-3 d-grid">
                                <input type="submit" name="submit" value="Add users" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>