<%- include('layout/header') %>
    <div class="comntainer">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light ">Edit User(
                            <% user.name %> )</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= user._id %> " method="post" id="add-form" enctype="multipart/form-data">
                            <div class="nb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter the name" value="<%= user.name %> " required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="email">email</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter the email" value=" <%= user.email %> " required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="phone">phone</label>
                                <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter the phone number" value=" <%= user.phone %> " required/>
                            </div>
                            <br>
                            <div class="nb-3">
                                <label for="image" class="form-label">select image</label>
                                <input type="file" name="image" class="form-control form-control-lg" />
                                <img src="/<%= user.image %> " width="50" class="ing-thumbnail">
                            </div>
                            <input type="hidden" name="old_image" value="<%= user.image %> ">
                            <br>

                            <div class="nb-3 d-grid">
                                <input type="submit" name="submit" value="update users" class="btn btn-success btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>